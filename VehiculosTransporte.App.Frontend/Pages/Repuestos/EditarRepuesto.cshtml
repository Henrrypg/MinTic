@page
@model VehiculosTransporte.App.Frontend.Pages.EditarRepuestoModel
@{
}
<div class="container">
<h2> Repuesto </h2>
<form method="post">
    <input type="hidden" asp-for="repuesto.Id"/>
    <input type="hidden" asp-for="repuesto.VerificacionId"/>
    <div class="form-group">
        <label asp-for="repuesto.Descripcion"></label>
        <input asp-for="repuesto.Descripcion" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="repuesto.Precio"></label>
        <input asp-for="repuesto.Precio" type="text" class="form-control">
    </div>

    <button type="submit" class="btn btn-dark"><i class="fa-solid fa-floppy-disk"></i></button>

</form>
</div>