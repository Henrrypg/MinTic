@page
@model VehiculosTransporte.App.Frontend.Pages.ListarVehiculo
@{
}
<h1>Vehículos</h1>

    <table class="table table-bordered" id="tablaVehiculos">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Placa</th>
        <th scope="col">Marca</th>
        <th scope="col">Modelo</th>
        <th scope="col">Expiración Técnico Mecánica</th>
        <th scope="col">Expiración Soat</th>
        <th><a asp-page="./EditarVehiculo" class="btn btn-dark"><i class="fa-solid fa-plus"></i> Añadir Vehículo</a></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Model.vehiculos){
            <tr>
            <td>@vehiculo.Id</td>
            <td>@vehiculo.Placa</td>
            <td>@vehiculo.Marca</td>
            <td>@vehiculo.Modelo</td>
            <td>@vehiculo.Expiracion_tenicomecanica</td>
            <td>@vehiculo.Expiracion_soat</td>
            <td><a class="btn btn-dark" asp-page="./DetallesVehiculo" asp-route-vehiculoId="@vehiculo.Id"><i class="fa-solid fa-circle-info"></i></a>
            <a class="btn btn-dark" asp-page="./EditarVehiculo" asp-route-vehiculoId="@vehiculo.Id"><i class="fa-solid fa-pen-to-square"></i></a>
            <a class="btn btn-dark" asp-page="./EditarVehiculo"
            onclick="return confirm('Seguro que deseas eliminar este vehiculo?');"
            asp-page-handler="Delete" asp-route-VehiculoId="@vehiculo.Id"><i class="fa-solid fa-trash-can"></i></a>
            </td>
            </tr>
        }
    </tbody>
    </table>
