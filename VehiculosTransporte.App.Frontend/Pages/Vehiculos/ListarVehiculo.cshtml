@page
@model VehiculosTransporte.App.Frontend.Pages.ListarVehiculo
@{
}

    <table class="table table-bordered" id="tablaVehiculos">
    <thead>
        <tr>
        <th scope="col">Id</th>
        <th scope="col">Placa</th>
        <th scope="col">Marca</th>
        <th scope="col">Modelo</th>
        <th scope="col">Expiracion Tenicomecanica</th>
        <th scope="col">Expiracion Soat</th>
        <th scope="col">Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehiculo in Model.vehiculos){
            <tr>
            <td>@vehiculo.Id</td>
            <td>@vehiculo.Placa</td>
            <td>@vehiculo.Marca</td>
            <td>@vehiculo.Modelo</td>
            <td>@vehiculo.Expiracion_tenicomecanica</td>
            <td>@vehiculo.Expiracion_soat</td>
            <td><a class="btn btn-primary table-btn" asp-page="./DetallesVehiculo" asp-route-vehiculoId="@vehiculo.Id">Detalles</a></td>
            </tr>
        }
    </tbody>
    </table>
